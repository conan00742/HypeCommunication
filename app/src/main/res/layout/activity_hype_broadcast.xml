<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="krot.sample.com.meshchatandroid.broadcast.HypeBroadcastActivity">

    <Button
        android:id="@+id/btn_do_broadcast_plain_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="plain text" />


    <Button
        android:id="@+id/btn_do_broadcast_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btn_do_broadcast_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video"
        android:layout_marginTop="20dp" />


    <Button
        android:id="@+id/btn_do_broadcast_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio"
        android:layout_marginTop="20dp" />


</LinearLayout>
